datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


//
// Vejam exemplo na p√°gina: https://www.prisma.io/docs/orm/prisma-schema/data-model/models
//

//
// para gerar o banco use o comando:
// $ npx prisma migrate dev
//
model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  posts   Post[]
}

model Post {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  title      String
  published  Boolean    @default(false)
  author     User       @relation(fields: [authorId], references: [id])
  authorId   Int
  categories Category[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[]
}

model Cliente {
    id        Int @id @default(autoincrement())
    nome      String
    email     String @unique
    telefone  String
    endereco  String
    cidade    String
    estado    String
    cep       String
    cpf       String @unique
    
    @@map("clientes")
}
